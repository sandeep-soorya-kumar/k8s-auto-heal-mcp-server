# ğŸš€ Kubernetes Auto-Heal MCP Server Dockerfile
FROM node:18-alpine

# ğŸ“‹ Metadata
LABEL maintainer="AI DevOps Team"
LABEL description="ğŸ¤– AI-powered Kubernetes cluster auto-healing and optimization"
LABEL version="1.0.0"

# ğŸ”§ Install system dependencies
RUN apk add --no-cache \
    curl \
    ca-certificates \
    bash \
    git \
    && rm -rf /var/cache/apk/*

# ğŸ‘¤ Create non-root user
RUN addgroup -g 1001 -S k8s-heal && \
    adduser -S -D -H -u 1001 -s /sbin/nologin -G k8s-heal k8s-heal

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ“¦ Copy package files
COPY k8s-mcp-server/package*.json ./

# ğŸ”§ Install Node.js dependencies
RUN npm ci --only=production && \
    npm cache clean --force

# ğŸ“„ Copy application code
COPY k8s-mcp-server/ ./

# ğŸ” Set ownership and permissions
RUN chown -R k8s-heal:k8s-heal /app && \
    chmod +x k8s-auto-heal-server.js

# ğŸ‘¤ Switch to non-root user
USER k8s-heal

# ğŸŒ Expose ports
EXPOSE 3000 8080

# ğŸ¥ Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# ğŸ“Š Environment variables
ENV NODE_ENV=production
ENV MONITORING_INTERVAL=30
ENV AUTO_HEAL_ENABLED=true
ENV KUBE_NAMESPACE=monitoring
ENV MCP_SERVER_PORT=3000

# ğŸš€ Start command
CMD ["node", "k8s-auto-heal-server.js"]
